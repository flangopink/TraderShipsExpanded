<Defs>
	<ThingDef Name="TSE_WreckBase" ParentName="NonDeconstructibleAncientBuildingBase" Abstract="True">
		<rotatable>false</rotatable>
		<fillPercent>0.5</fillPercent>
		<castEdgeShadows>false</castEdgeShadows>
		<passability>PassThroughOnly</passability>
		<pathCost>50</pathCost>
		<statBases>
		  <MaxHitPoints>6000</MaxHitPoints>
		  <Flammability>0</Flammability>
		</statBases>
		<tradeTags>
			<li>TSE_ShipWreck</li> <!-- used for GenStep for crash sites and stuff -->
		</tradeTags>
	</ThingDef>
	
	<ThingDef ParentName="TSE_WreckBase">
		<defName>TSE_Wreck_Swordfish</defName>
		<label>small cargo ship wreck</label>
		<description>...</description>
		<graphicData>
		  <texPath>TSE/Ships/Swordfish/Swordfish_wreck</texPath>
		  <graphicClass>Graphic_Single</graphicClass>
		  <shaderType>CutoutComplex</shaderType>
		  <shadowData>
			<volume>(6, 1, 2)</volume>
			<offset>(-1, 0, -1)</offset>
		  </shadowData>
		  <drawSize>(11,5)</drawSize>
		</graphicData>
		<size>(11,4)</size>
		<killedLeavingsRanges>
		  <ChunkSlagSteel>4~8</ChunkSlagSteel>
		  <Steel>20~50</Steel>
		  <Plasteel>20~50</Plasteel>
		  <ComponentIndustrial>2~5</ComponentIndustrial>
		  <ComponentSpacer>1</ComponentSpacer>
		</killedLeavingsRanges>
		<comps>
			<li MayRequire="OskarPotocki.VanillaVehiclesExpanded" 
			    Class="VanillaVehiclesExpanded.CompProperties_VehicleWreck">
				<vehicleDef>TSE_Vehicle_Swordfish</vehicleDef>
				<spawnRotation>East</spawnRotation>
			</li>
		</comps>
	</ThingDef>
	
