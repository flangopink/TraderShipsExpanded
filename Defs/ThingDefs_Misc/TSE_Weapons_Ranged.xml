<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef Name="TSE_CorpWeapon" ParentName="BaseHumanMakeableGun" Abstract="True">
    <techLevel>Spacer</techLevel>
	<soundInteract>Interact_ChargeRifle</soundInteract>
	<recipeMaker>
      <researchPrerequisite>ChargedShot</researchPrerequisite>
      <skillRequirements>
        <Crafting>9</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
	<thingSetMakerTags>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>
    <tradeTags>
      <li>TSE_Corporation</li>
    </tradeTags>
    <weaponClasses>
      <li>RangedLight</li>
    </weaponClasses>
	<comps>
		<li><compClass>CompColorable</compClass></li>
	</comps>
	<colorGenerator Class="ColorGenerator_Options">
	  <options>
		<li>
		  <weight>8</weight>
		  <only>(0.8,0.8,0.8,1)</only>
		</li>
		<li>
		  <weight>8</weight>
		  <only>(0.65,0.65,0.65,1)</only>
		</li>
		<li>
		  <weight>8</weight>
		  <only>(0.5,0.5,0.5,1)</only>
		</li>
		<li>
		  <weight>6</weight>
		  <min>(0.5,0.5,0.5,1)</min>
		  <max>(0.7,0.7,0.7,1)</max>
		</li>
		<li>
		  <weight>4</weight>
		  <only>(0.3,0.3,0.3,1)</only>
		</li>
	  </options>
	</colorGenerator>
  </ThingDef>

  <!-- Corporation Standard Rifle -->
  <ThingDef ParentName="TSE_CorpWeapon">
    <defName>TSE_Corporation_Standard_Rifle</defName>
    <label>corporation standard rifle</label>
    <description>...</description>
    <graphicData>
      <texPath>TSE/Weapons/CorpRifle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <equippedAngleOffset>30</equippedAngleOffset>
    <weaponTags>
      <li>CorporationStandardRifle</li>
    </weaponTags>
    <statBases>
      <WorkToMake>45000</WorkToMake>
      <Mass>4.6</Mass>
      <AccuracyTouch>0.6</AccuracyTouch>
      <AccuracyShort>0.69</AccuracyShort>
      <AccuracyMedium>0.6</AccuracyMedium>
      <AccuracyLong>0.5</AccuracyLong>
      <RangedWeapon_Cooldown>1.9</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Plasteel>50</Plasteel>
      <ComponentSpacer>2</ComponentSpacer>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>TSE_Bullet_CorporationStandardRifleBullet</defaultProjectile>
        <warmupTime>1.0</warmupTime>
        <range>25.9</range>
        <ticksBetweenBurstShots>12</ticksBetweenBurstShots>
        <burstShotCount>3</burstShotCount>
        <soundCast>Shot_ChargeRifle</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>TSE_Bullet_CorporationStandardRifleBullet</defName>
    <label>corporation rifle shot</label>
    <graphicData>
      <texPath>Things/Projectile/Charge_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>18</damageAmountBase>
      <armorPenetrationBase>0.4</armorPenetrationBase>
      <speed>80</speed>
    </projectile>
  </ThingDef>
  
